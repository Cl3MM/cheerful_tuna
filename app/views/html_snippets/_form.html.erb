<%= simple_form_for @html_snippet, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :view_path %>
  <%= f.input :snippets, input_html: { class: "input-xxlarge", rows: 5 } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                html_snippets_path, :class => 'btn' %>
  </div>
<% end %>
