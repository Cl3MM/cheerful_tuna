<%- model_class = HtmlSnippet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:snippets) %></th>
      <th><%= model_class.human_attribute_name(:view_path) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @html_snippets.each do |html_snippet| %>
      <tr>
        <td><%= link_to html_snippet.id, html_snippet_path(html_snippet) %></td>
        <td><%= html_snippet.name %></td>
        <td><%= html_snippet.snippets %></td>
        <td><%= html_snippet.view_path %></td>
        <td><%=l html_snippet.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_html_snippet_path(html_snippet), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      html_snippet_path(html_snippet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_html_snippet_path,
            :class => 'btn btn-primary' %>
