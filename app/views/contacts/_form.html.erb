<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @contact.errors.any? %>
    <div class="alert alert-error">
      <h4 class="alert-heading"><%= pluralize(@contact.errors.count, "error") %> prohibited this user from being saved:</h4>
      <a class="close" data-dismiss="alert">&times;</a>
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :company %>
  <%= f.input :address %>
  <%= f.input :postal_code %>
  <%= f.input :category %>

  <%= f.input :country, :prompt => "Select a country" %>

  <%= f.input :website %>
  <%= f.fields_for :emails do |m| %>
    <%= render 'email_fields', f: m %>
  <% end %>
  <div class="control-group">
    <div class="controls">
      <%= link_to_add_fields "Add another email address", f, :emails %>
    </div>
  </div>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :is_ceres_member, :label => "CERES member?" %>
  <%= f.input :position %>
  <%= f.input :telphone %>
  <%= f.input :fax %>
  <%= f.input :cell %>
  <%= f.input :infos, :as => :text, :input_html => {:rows => 5} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contacts_path, :class => 'btn' %>
  </div>
<% end %>
