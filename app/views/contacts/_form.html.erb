<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :address %>
  <%= f.input :postal_code %>
  <%= f.input :category %>
  <%#= f.input :country %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :infos %>
  <%= f.input :is_active %>
  <%= f.input :is_ceres_member %>
  <%= f.input :company %>
  <%= f.input :position %>
  <%= f.input :telphone %>
  <%= f.input :fax %>
  <%= f.input :cell %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contacts_path, :class => 'btn' %>
  </div>
<% end %>
