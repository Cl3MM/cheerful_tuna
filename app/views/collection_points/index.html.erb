<%- model_class = CollectionPoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cp_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:telephone) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:postal_code) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @collection_points.each do |collection_point| %>
      <tr>
        <td><%= link_to collection_point.id, collection_point_path(collection_point) %></td>
        <td><%= collection_point.cp_id %></td>
        <td><%= collection_point.name %></td>
        <td><%= collection_point.telephone %></td>
        <td><%= collection_point.address %></td>
        <td><%= collection_point.postal_code %></td>
        <td><%= collection_point.city %></td>
        <td><%= collection_point.country %></td>
        <td><%= collection_point.longitude %></td>
        <td><%= collection_point.latitude %></td>
        <td><%=l collection_point.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_collection_point_path(collection_point), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      collection_point_path(collection_point),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_collection_point_path,
            :class => 'btn btn-primary' %>
