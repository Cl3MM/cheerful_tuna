<%= render 'layouts/flash', flash: flash %>
<div class="container">
  <div class="row-fluid">
    <div class="span12">
      <div class="well">
        <span class="">Welcome <%= current_member.user_name %>: <%= link_to "Logout", joomla_logout_path %></span>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="well">
        <div style="max-width: 400px; margin: 0 auto 10px;">
          <%= link_to raw('<i class="icon-file"></i> Generate my certificate'), member_path(@member, format: "pdf", certif: 1), :class => "btn btn-large btn-block btn-info" %>
        </div>
      </div>
      <div id="company">
        <h3>Company details</h3>
        <%= display_joomla_address @member %>
      </div>
      <hr />
      <div id="membership">
        <h3>Membership details</h3>
        <%= joomla_membership_details @member %>
      </div>
      <hr />
      <div id="contacts">
        <h3>Associated contacts</h3>
        <% if @member.contacts.any? %>
          <%= contact_details @member %>
      <% else %>
          <p>No associated contacts</p>
      <% end %>
      </div>
      <hr />
      <div id="files">
        <h3>Files</h3>
        <%= image_tag @member.qr_code_asset_url, class: "pull-left no_margin" unless @member.qr_code_asset_url.nil? %>
      </div>
    </div>
  </div>
</div>
