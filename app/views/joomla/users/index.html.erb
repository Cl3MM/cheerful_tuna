<div class="container">
<% if flash.any? %>
  <% flash.each do |name, msg| %>
    <div class="row-fluid">
      <div class="span12">
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">Ã—</a>
          <%= raw(msg) %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

  <div class="row-fluid">
    <div class="span12">
      <div class="well">
        <span class="">Welcome <%= current_member.user_name %>: <%= link_to "Logout", joomla_logout_path %></span>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="btn-group pagination-centered form-actions">
        <%#= link_to "Back", :back, :class => 'btn'  %>
        <%#= link_to t('.edit', :default => t("helpers.links.edit")), joomla_edit_path(@member), :class => 'btn' %>
        <%#= link_to raw('<i class="icon-download"></i> Membership Form'), @member.membership_file_url, class: "btn", target: "_blank" if @member.membership_file %>
        <%= link_to raw('<i class="icon-file"></i> Generate my certificate'), member_path(@member, format: "pdf", certif: 1), :class => "btn btn-inverse" %>
        <%#= link_to raw('<i class="icon-qrcode"></i> QR Code'), member_path(@member, qr_code: true), :class => "btn btn-info" %>
      </div>
      <div id="company">
        <h3>Company details</h3>
        <%= display_joomla_address @member %>
      </div>
      <hr />
      <div id="membership">
        <h3>Membership details</h3>
        <%= joomla_membership_details @member %>
      </div>
      <hr />
      <div id="contacts">
        <h3>Associated contacts</h3>
        <% if @member.contacts.any? %>
          <%= contact_details @member %>
      <% else %>
          <p>No associated contacts</p>
      <% end %>
      </div>
      <hr />
      <div id="files">
        <h3>Files</h3>
        <%= image_tag @member.qr_code_asset_url, class: "pull-left no_margin" unless @member.qr_code_asset_url.nil? %>
      </div>
    </div>
