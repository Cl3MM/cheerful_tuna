<%- model_class = Mailing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @mailing.subject %></dd>
  <dt><strong>Template:</strong></dt>
  <dd><%= @mailing.email_template.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to) %>:</strong></dt>
  <dd><%= @mailing.to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cc) %>:</strong></dt>
  <dd><%= @mailing.cc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bcc) %>:</strong></dt>
  <dd><%= @mailing.bcc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @mailing.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:html_version) %>:</strong></dt>
  <dd><%= @mailing.html_version %></dd>
  <dt><strong><%= model_class.human_attribute_name(:send_at) %>:</strong></dt>
  <dd><%= Time.zone.parse(@mailing.send_at.to_s) %></dd>
</dl>

<div class="form-actions">
  <div class="btn-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mailings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mailing_path(@mailing), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mailing_path(@mailing),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  </div>
</div>
