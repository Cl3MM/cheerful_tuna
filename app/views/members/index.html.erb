<%- model_class = Member.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %>
    <%= link_to 'New member', new_member_path, class: 'btn btn-primary pull-right' %>
  </h1>
</div>
<div class="pagination pagination-centered">
  <%= will_paginate @contacts, :renderer => BootstrapPagination::Rails %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Member</th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:activity) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= link_to member.company, member_path(member) %></td>
        <td><%= member.city %></td>
        <td><%= member.country %></td>
        <td><%= member.activity_list.map{|act| act.capitalize}.join(", ").truncate(20) %></td>
        <td><%= member.category %></td>
        <td><%= member.start_date %></td>
        <td>
          <%= link_to raw('<i class="icon-star"></i>'), member_path(member, format: "pdf", certif: true), :class => "btn btn-inverse btn-mini" %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_member_path(member), :class => 'btn btn-mini' %>
        <% if current_user.is_admin? %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      member_path(member),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pagination pagination-centered">
  <%= will_paginate @contacts, :renderer => BootstrapPagination::Rails %>
</div>
