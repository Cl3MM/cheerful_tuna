jQuery ->

  $('.habtm_tooltip').tooltip()

  $('#member_category').select2()

  $('#member_country').select2()

  $('#member_billing_country').select2()

  $('#member_start_date').datepicker
    format: 'yy-mm-dd'

  $('#member_contact_ids').select2
    placeholder: "Select contact(s)"
    allowClear: true
    minimumInputLength: 3
    multiple: true
    ajax:
      url: "/contacts.json"
      dataType: 'json'
      quietMillis: 100
      data: (term, page) ->
        member_query: term
        page: page
      results: (data, page) ->
        #console.log('result '+  data)
        results: data
    formatResult: (contact) ->
      contact.text
    formatSelection: (data) ->
      data.text

  $('#member_contact_ids').select2("data", $.parseJSON($('#member_contact_ids').val()))

